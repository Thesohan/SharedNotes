<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/schoolsImages"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:src="@drawable/adarsh"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <TextView
            android:layout_weight="4"
            android:id="@+id/schoolNamesTextView"
            android:textColor="@color/black"
            android:fontFamily="@font/josefin_bold"
            android:layout_margin="4dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:text="Schools of Art"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/noticeWithPdf"
            android:layout_margin="8dp"
            android:background="@drawable/ic_picture_as_pdf_black_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>