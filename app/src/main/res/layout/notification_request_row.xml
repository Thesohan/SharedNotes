<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <include
        layout="@layout/all_notification_row">

    </include>
    <TextView
        android:layout_margin="4dp"
    android:id="@+id/allNoticedescriptionTextView"
    android:layout_width="wrap_content"
    android:textColor="@color/black"
    android:text="food Description will be here . This food is one of the best food in the market Here your are getting the facility of not only eating"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="4dp"
        android:id="@+id/requestLinkTextView"
        android:layout_width="wrap_content"
        android:textColor="@color/com_facebook_blue"
        android:text="www.google.com"
        android:layout_height="wrap_content"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:text="School :"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/schoolNameTextView"
                android:text="School Name"
                android:layout_weight="4"
                android:maxLines="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:backgroundTint="@color/green"
                android:layout_margin="8dp"
                android:id="@+id/AlowButton"
                android:textColor="@color/white"
                android:text="Allow"
                android:focusable="false"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:backgroundTint="@color/yellow"
                android:layout_margin="8dp"
                android:id="@+id/editButton"
                android:text="Edit"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:focusable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:backgroundTint="@color/red"
                android:layout_margin="8dp"
                android:id="@+id/DenyButton"
                android:text="Deny"
                android:focusable="false"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

</LinearLayout>

    </androidx.cardview.widget.CardView>
