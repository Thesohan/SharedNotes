<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:minHeight="1000dp"
    android:minWidth="1000dp"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/notice"
                    android:layout_gravity="center"
                    android:id="@+id/allNoticeImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/allNoiceTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/allNoticeImageView"
                    android:text="Title"
                    android:textSize="20dp"
                    android:background="#8888"
                    android:fontFamily="@font/josefin_bold"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


            <TextView

                android:layout_marginTop="5dp"
                android:id="@+id/allNoticedescriptionTextView"
                android:layout_width="wrap_content"
                android:fontFamily="@font/josefin_bold"
                android:textSize="15sp"
                android:text="food Description will be here . This food is one of the best food in the market Here your are getting the facility of not only eating"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="4dp"
                android:textColor="@color/com_facebook_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="right"
                android:text="- Adarsh Bhatt"
                android:id="@+id/senderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>