<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout

            android:id="@+id/imageandTitleLinearLayout"
            android:focusable="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<ProgressBar-->
            <!--android:id="@+id/imageProgressBar"-->
            <!--android:padding="95dp"-->
            <!--android:indeterminateTint="@color/colorPrimary"-->
            <!--android:indeterminate="true"-->
            <!--android:indeterminateTintMode="src_atop"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"/>-->

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="4dp">

            <ImageView
                android:background="@drawable/pdf"
                android:id="@+id/pdfNoticeImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:padding="8sp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="8sp"
                android:id="@+id/pdfNoiceTitleTextView"/>
        </LinearLayout>

        <TextView

            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:textColor="@color/blue"
            android:text="food Description will be here . This food is one of the best food in the market Here your are getting the facility of not only eating"
            android:layout_height="wrap_content"
            android:id="@+id/pdfNoticedescriptionTextView" />
        <LinearLayout

            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:text="School :"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/pdfschoolNameTextView"
                android:text="School Name"
                android:layout_weight="4"
                android:maxLines="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    <TextView
        android:layout_margin="4dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:gravity="right"
        android:text="- Adarsh Bhatt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pdfsenderTextView"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:backgroundTint="@color/green"
                android:layout_margin="8dp"
                android:id="@+id/AlowButton"
                android:textColor="@color/white"
                android:text="Allow"
                android:focusable="false"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:backgroundTint="@color/yellow"
                android:layout_margin="8dp"
                android:id="@+id/editButton"
                android:text="Edit"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:focusable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:backgroundTint="@color/red"
                android:layout_margin="8dp"
                android:id="@+id/DenyButton"
                android:text="Deny"
                android:focusable="false"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>
